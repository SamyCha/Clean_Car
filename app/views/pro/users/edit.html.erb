<div class="container">

  <div class="row text-right margin-top5" >
    <div class="col-xs-10 col-xs-offset-2">
      <h1 id="dashboard-h1">Your Profile</h1>
      <p>Edit your infos</p>
    </div>
  </div>

  <div class="row">
    <%= simple_form_for @user, url: pro_user_path(@user) do |f| -%>
      <div class="col-xs-6">
        <%= f.input :avatar, as: :attachinary %>
      </div>
      <div class="col-xs-12">
        <%= f.input :email %>
      </div>
      <div class="col-xs-6">
        <%= f.input :firstname %>
      </div>
      <div class="col-xs-6">
        <%= f.input :lastname %>
      </div>
      <div class="col-xs-12">
        <%= f.input :address %>
      </div>
      <div class="col-xs-12">
        <%= f.input :phonenumber %>
      </div>
      <div class="col-xs-12 text-center">
        <%= f.submit "Save your Informations", class: "btn btn-primary", style: "width: 45%; font-size: 3vw;" %>
      </div>
    <% end -%>
  </div>
</div>
