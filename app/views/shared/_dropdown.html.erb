<div class="row">
  <div class="dropdown" style="position: absolute; top: 35px; left: 40px;">
    <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown" "></i>
    <ul class="dropdown-menu">
      <% if user_signed_in? %>
        <li><%= link_to "New cleaning", new_cleaning_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Dashboard", dashboard_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li role="separator" class="divider"></li>
        <li>
          <%= link_to destroy_user_session_path, class: "navbar-wagon-item navbar-wagon-link", method: :delete do %>
