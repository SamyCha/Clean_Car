<div class="container">

  <%= render "shared/mcc-main-title" %>

  <%= simple_form_for :clean, url: cleanings_path, method: :post do |f| %>
    <div class="row">
      <p class="car-select">
        Select your car
      </p>
    </div>

    <%= render "shared/swiper" %>
    <%= f.text_field :car_id, id: "car_id_field", class: "hidden" %>

    <div class="row margin-top15" >
      <p class="period-select">
        Enter your parking period
      </p>
      <div class="datetime-group">
        <div class="col-xs-1 text-center col-icon-datetime">
          <i class="fa fa-calendar" aria-hidden="true"></i>
        </div>
        <div class="col-xs-11">
          <%= f.date_field :date, id: "date_picker", class: "form-control" %>
        </div>
      </div>

      <div class="datetime-group">
        <div class="col-xs-1 text-center col-icon-datetime">
          <i class="fa fa-clock-o" aria-hidden="true"></i>
        </div>
        <div class="col-xs-11">
          <%= f.text_field :time, readonly: true, class: "clockpicker form-control", value: "14:00" %>
        </div>
      </div>
    </div>

    <div class="row margin-top15">
      <p class="location-select">
        Car location during cleaning
      </p>
      <div class="flex-ver-center">
        <div class="col-xs-1 text-right location-img">
          <%= image_tag "localisation.png", style: "height: 30px;"%>
        </div>
        <div class="col-xs-11">
          <%= f.input :place, input_html: {class: "form-control autocomplete", placeholder: "Bordeaux"}, label: false %>
        </div>
      </div>
    </div>

    <div class="row margin-top15">
      <div class="col-xs-12">
        <%= f.text_area :comment_access, placeholder: "Give more details to the cleaner (special access, other informations ...)", class: "form-control comment-access"  %>
      </div>
    </div>

    <div class="row margin-top15">
      <div class="col-xs-2">
        <div class="btn btn-danger glyphicon glyphicon-ok"></div>
        <%= f.text_field :requirements, class: "hidden requirements-field" %>
      </div>
      <div class="col-xs-10">
        <p>Confirm the security and easy access for the cleaner</p>
      </div>
    </div>

    <div class="row margin-top15">
      <div class="text-center">
        <%= f.submit "Contact a cleaner", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>

<script>
  $(document).ready(function() {
    $('.glyphicon-ok').on('click', function(e) {
      $(this).toggleClass('btn-danger');
      $(this).toggleClass('btn-success');
      $('.requirements-field').val('true');
    });
  });
</script>
