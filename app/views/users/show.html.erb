<div class="container">
  <div class="row text-right" style="margin-top: 5px;">
    <div class="col-xs-10 col-xs-offset-2">
      <h2>Your Profile</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-4 col-xs-offset-1 text-center">
      <%= image_tag "profil.png", style: "width: 100%"%>
    </div>
    <div class="col-xs-7 text-right">
      <p><%= current_user.email %></p>
      <p style="font-size: 12px;">client since : <%= current_user.created_at.strftime('%d/ %m/ %Y') %></p>
    </div>
  </div>

</div>
