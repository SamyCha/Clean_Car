<div class="container">
  <div class="row text-right" style="margin-top: 15px;">
    <div class="col-xs-10 col-xs-offset-2">
      <h2>Enter your car to clean</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= simple_form_for @car do |f| %>
        <%= f.error_notification %>

      <div class="form-inputs">
        <div class="col-xs-12">
            <%= f.input :immatriculation, placeholder: "DB 888 QV"  %>
          </div>
          <div class="col-xs-6">
           <%= f.input :brand, placeholder: "Peugeot" %>
          </div>
          <div class="col-xs-6">
            <%= f.input :model, placeholder: "208" %>
          </div>
          <div class="col-xs-12">
            <%= f.input :color, placeholder: "grey" %>
          </div>

        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
        <strong>*Select your car size:</strong>
    </div>
  </div>

  <div class="row" style="display: flex; align-items: center;">
    <div class="col-xs-4 text-center">
      <p>small</p>
      <%= image_tag "car_picto.png", style: "height: 45px;"%>
    </div>
    <div class="col-xs-4 text-center">
      <p>medium</p>
      <%= image_tag "car_picto.png", style: "height: 60px;"%>
    </div>
    <div class="col-xs-4 text-center">
      <p>large</p>
      <%= image_tag "car_picto.png", style: "height: 75px;"%>
    </div>
  </div>

  <div class="row" style="margin: 20px 0px;">
    <div class="col-xs-12 text-center">
      <%= f.submit "Save this Car", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>
