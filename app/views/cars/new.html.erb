<div class="container">
  <div class="row">
    <div class="col-xs-12 text-right" style="margin-top: 50px;">
      <h2>Enter your car to clean</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= simple_form_for @car do |f| %>
        <%= f.error_notification %>

      <div class="form-inputs">
        <div class="col-xs-12">
            <%= f.input :immatriculation, placeholder: "DB 888 QV"  %>
          </div>
          <div class="col-xs-6">
           <%= f.input :brand, placeholder: "Peugeot" %>
          </div>
          <div class="col-xs-12">
            <%= f.input :model, placeholder: "208" %>
          </div>
          <div class="col-xs-12">
            <%= f.input :color, placeholder: "grey" %>
          </div>

    <div class="row">
      <h6 style="margin-bottom: 3px; margin-left: 16px;">
        Car size:
      </h6>
      <div class="col-xs-4">
        <%= image_tag "car_picto.png", style: "height: 45px;"%>
      </div>
      <div class="col-xs-4">
        <%= image_tag "car_picto.png", style: "height: 60px;"%>
      </div>
      <div class="col-xs-4">
        <%= image_tag "car_picto.png", style: "height: 75px;"%>
      </div>
    </div>

          <div class="col-xs-12 text-center">
            <%= f.submit "Save this Car", class: "btn btn-success" %>
              or
            <%= link_to "Add an other Car", new_car_path(current_user), class: "btn btn-primary" %>
          </div>

        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
        <strong>*Select your car size:</strong>
    </div>
  </div>

  <div class="row" align="center">
    <div class="col-xs-4">
      small
    </div>
    <div class="col-xs-4">
      medium
    </div>
    <div class="col-xs-4">
      large
    </div>
  </div>

  <div class="row" align="center">
    <div class="col-xs-4">
      <%= image_tag "car_picto.png", style: "height: 45px;"%>
    </div>
    <div class="col-xs-4">
      <%= image_tag "car_picto.png", style: "height: 60px;"%>
    </div>
    <div class="col-xs-4">
      <%= image_tag "car_picto.png", style: "height: 75px;"%>
    </div>
  </div>

    <div class="col-xs-12 text-center">
      <%= f.submit "Save this Car", class: "btn btn-success" %>
    </div>
    <div class="col-xs-12 text-center">
        <p>or</p>
    </div>
    <div class="col-xs-12 text-center">
      <%= link_to "Add an other Car", new_car_path(current_user), class: "btn btn-success" %>
    </div>

  <% end %>
</div>