<div class="container">

  <div class="row">
    <div class="col-xs-12" style="margin-top: 50px;">
      <h2 class="text-right" style="margin-right: 20px;">
        Sign up
        <small>
        <% if params[:cleaner] %>
          as cleaner
        <% else %>
          as client
        <% end %>
        </small>
      </h2>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="col-xs-12">
            <%= f.input :email, required: true, autofocus: true %>
        <% if params[:cleaner] %>
          </div>
          <div class="col-xs-6">
            <%= f.input :firstname, required: true %>
          </div>
          <div class="col-xs-6">
            <%= f.input :lastname, required: true %>
          </div>
          <div class="col-xs-12">
              <%= f.input :address, required: true, input_html: { class: 'autocomplete' } %>
              <%= f.input :cleaner, as: :hidden, input_html: {value: true} %>
        <% end %>
            <%= f.input :phonenumber, required: true %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, required: true %>
          </div>
        </div>

        <div class="form-actions col-xs-6 ">
          <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- NASTY ! =P -->
  <hr>

  <div class="row">
    <div class="col-xs-12 text-center">
      <h5>Already an account ?</h5>
    </div>
    <div class="col-xs-6 col-xs-offset-3 text-center btn btn-default" style="margin-bottom: 100px;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
